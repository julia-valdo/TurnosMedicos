@model IEnumerable<TurnosMedicos.Models.Turno>

@{
    ViewData["Title"] = "Turnos Por Medico";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medico)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medico.Nombre)
                </td>
                @if (User.IsInRole("Administrador"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TurnoId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.TurnoId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.TurnoId">Delete</a>
                        @if (item.Usuario == null)
                        {
                            <a class="btn btn-primary" asp-action="Reservar" asp-route-id="@item.TurnoId">Reservar</a>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Volver</a>
</div>
